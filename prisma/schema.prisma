generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model VpnUser {
    id Int @id @default(autoincrement())
    username String @unique
    email String? 
    createDate DateTime @default(now())
    firstName String?
    lastName String?
    languageCode String? @default("ru")
    telegramId Int?
    socialLinks SocialLink[]
    payments Payment[]
    desktopOS DesktopOS
    phoneOS DeviceOS
    phone String?

    @@map("users")
}

model SocialLink {
  id Int @id @default(autoincrement())
  link String 
  user VpnUser @relation(fields: [userId], references: [id])
  userId Int

  @@map("links")
}

model Payment {
  id Int @id @default(autoincrement())
  user VpnUser @relation(fields: [userId], references: [id])
  userId Int
  paymentDate DateTime @default(now())
  amount Int @default(80)
  currency String @default("RUB")

  @@map("payments")
}

enum DeviceOS {
  Android
  iOS
}

enum DesktopOS {
  Windows
  macOS
  Linux
}