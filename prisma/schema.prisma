generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model VpnUser {
  id               Int       @id @default(autoincrement())
  username         String    @unique
  telegramId       Int?      @map(name: "telegram_id")
  telegramUsername String    @map(name: "telegram_username")
  phone            String?
  createDate       DateTime  @default(now()) @map("create_date")
  firstName        String?   @map(name: "first_name")
  lastName         String?   @map(name: "last_name")
  languageCode     String?   @default("ru") @map(name: "language_code")
  paymentDate      DateTime  @map("payment_date")
  desktopOS        DesktopOS @map(name: "desktop_os")
  deviceOS         DeviceOS  @map(name: "device_os")

  @@map("users")
}

enum DeviceOS {
  Android
  iOS

  @@map("device_os")
}

enum DesktopOS {
  Windows
  macOS
  Linux

  @@map("desktop_os")
}
