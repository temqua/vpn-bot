{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch Keys Bot nodemon",
			"program": "${workspaceFolder}/apps/keys/src/index.ts",
			"request": "launch",
			"skipFiles": ["<node_internals>/**"],
			"runtimeExecutable": "nodemon",
			"type": "node",
			"sourceMaps": true,
			"envFile": "${workspaceFolder}/apps/keys/.env",
			"outFiles": ["${workspaceFolder}/apps/keys/dist/src/**/*.js"]
		},
		{
			"name": "Launch Users Bot nodemon",
			"program": "${workspaceFolder}/apps/users/src/index.ts",
			"request": "launch",
			"skipFiles": ["<node_internals>/**"],
			"runtimeExecutable": "nodemon",
			"restart": true,
			"runtimeArgs": ["--exec", "ts-node"],
			"args": ["--project", "${workspaceFolder}/apps/users/tsconfig.dev.json"],
			"type": "node",
			"sourceMaps": true,
			"envFile": "${workspaceFolder}/apps/users/.env",
			"outFiles": ["${workspaceFolder}/apps/users/dist/src/**/*.js"],
			"preLaunchTask": "tsc: build - apps/users/tsconfig.dev.json"
		},
		{
			"name": "Launch Keys Bot",
			"program": "${workspaceFolder}/apps/keys/src/index.ts",
			"request": "launch",
			"skipFiles": ["<node_internals>/**"],
			"type": "node",
			"envFile": "${workspaceFolder}/apps/keys/.env",
			"outFiles": ["${workspaceFolder}/apps/keys/dist/src/**/*.js"],
			"preLaunchTask": "tsc: build - apps/keys/tsconfig.json"
		},
		{
			"name": "Launch Users Bot",
			"program": "${workspaceFolder}/apps/users/src/index.ts",
			"request": "launch",
			"skipFiles": ["<node_internals>/**"],
			"type": "node",
			"envFile": "${workspaceFolder}/apps/users/.env",
			"outFiles": ["${workspaceFolder}/apps/users/dist/src/**/*.js"],
			"preLaunchTask": "tsc: build - apps/users/tsconfig.dev.json"
		}
	]
}
