{
	"compilerOptions": {
		"outDir": "dist",
		"module": "nodenext",
		"target": "es2024",
		"lib": ["ES2024"],
		"moduleResolution": "nodenext",
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"esModuleInterop": true
	},
	"include": ["src/**/*", "package.json"],
	"exclude": ["node_modules"]
}
